<UserControl x:Class="PSTARV2MonitoringApp.Views.Dialogs.AbnormalSimulationDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PSTARV2MonitoringApp.Views.Dialogs"
             mc:Ignorable="d" 
             Width="400" Height="150">
            <ScrollViewer Background="#212121" Padding="10">
                <ComboBox x:Name="cmbAbnormalType"  
                          VerticalAlignment="Top"
                          Width="380"
                          Height="50"
                          Background="#2D2D2D"
                          Foreground="White">
                    <ComboBoxItem Content="OVERLOAD" IsSelected="True"/>
                    <ComboBoxItem Content="LOW PRESSURE"/>
                    <ComboBoxItem Content="POWER FAIL"/>
                </ComboBox>
            </ScrollViewer>
</UserControl>