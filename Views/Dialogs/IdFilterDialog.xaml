<ui:ContentDialog x:Class="PSTARV2MonitoringApp.Views.Dialogs.IdFilterDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                  Title="ID 필터"
                  PrimaryButtonText="확인"
                  SecondaryButtonText="취소"
                  Width="400"
                  Height="350"
                  Background="#2D2D30"
                  mc:Ignorable="d">

    <!-- ContentDialog 스타일 추가 -->
    <ui:ContentDialog.Resources>
        <Style TargetType="ui:ContentDialog">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </ui:ContentDialog.Resources>

    <Grid Margin="20" Background="#2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="필터링할 ID를 선택하세요:" 
                   FontSize="16" 
                   FontWeight="SemiBold"
                   Foreground="White"
                   Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="IdSelectionPanel">
                <!-- All 옵션 -->
                <RadioButton x:Name="AllRadioButton" 
                           Content="전체 보기" 
                           GroupName="IdFilter"
                           IsChecked="True"
                           FontSize="14"
                           Foreground="White"
                           Margin="0,5"/>

                <!-- 동적으로 ID 라디오 버튼들이 추가됩니다 -->
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <ui:Button x:Name="ClearFilterButton"
                       Content="필터 해제"
                       Background="#6c757d"
                       Foreground="White"
                       Margin="0,0,10,0"
                       Click="OnClearFilterClick"/>
        </StackPanel>
    </Grid>
</ui:ContentDialog>