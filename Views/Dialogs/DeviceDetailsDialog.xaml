<UserControl x:Class="PSTARV2MonitoringApp.Views.Dialogs.DeviceDetailsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PSTARV2MonitoringApp.Views.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">

    <UserControl.Resources>
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#4FC3F7"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#4FC3F7"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#4FC3F7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#1A293F58"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer Background="#212121" Padding="10">
        <StackPanel>
            <!-- 장치 기본 정보 -->
            <TextBlock Text="PSTAR-V2-5H" Foreground="White" FontSize="14" Margin="0,0,0,10"/>

            <!-- COM 정보 섹션 -->
            <Border Style="{StaticResource SectionBorderStyle}">
                <StackPanel>
                    <TextBlock Text="COM" Style="{StaticResource SectionTitleStyle}"/>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="CAN ID" Grid.Column="0" Grid.Row="0" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="txtCanId" Text="{Binding DeviceId}" Grid.Column="1" Grid.Row="0" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Text="CAN Interval" Grid.Column="2" Grid.Row="0" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="200" Grid.Column="3" Grid.Row="0" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Text="COM Status" Grid.Column="0" Grid.Row="1" Style="{StaticResource LabelStyle}" Margin="0,15,5,0"/>
                        <TextBlock x:Name="txtComStatus" Text="Connected" Grid.Column="1" Grid.Row="1" Style="{StaticResource ValueStyle}" Margin="0,15,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 타이머 정보 섹션 -->
            <Border Style="{StaticResource SectionBorderStyle}">
                <StackPanel>
                    <TextBlock Text="Timer" Style="{StaticResource SectionTitleStyle}"/>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Building Time" Grid.Column="0" Grid.Row="0" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="txtBuildingTime" Text="{Binding BuildUpTime}" Grid.Column="1" Grid.Row="0" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Text="Parallel Time" Grid.Column="2" Grid.Row="0" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="txtParallelTime" Text="{Binding ParallelTime}" Grid.Column="3" Grid.Row="0" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Text="Sequence Time" Grid.Column="0" Grid.Row="1" Style="{StaticResource LabelStyle}" Margin="0,15,5,0"/>
                        <TextBlock x:Name="txtSequenceTime" Text="{Binding CountSeqTime_S}" Grid.Column="1" Grid.Row="1" Style="{StaticResource ValueStyle}" Margin="0,15,0,0"/>

                        <TextBlock Text="Heating On Time" Grid.Column="2" Grid.Row="1" Style="{StaticResource LabelStyle}" Margin="0,15,5,0"/>
                        <TextBlock x:Name="txtHeatingOnTime" Text="{Binding HeatingOnTime}" Grid.Column="3" Grid.Row="1" Style="{StaticResource ValueStyle}" Margin="0,15,0,0"/>

                    </Grid>
                </StackPanel>
            </Border>

            <!-- 현재 타이머 값 섹션 -->
            <Border Style="{StaticResource SectionBorderStyle}">
                <StackPanel>
                    <TextBlock Text="Current Timer Value" Style="{StaticResource SectionTitleStyle}"/>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Sequence Time" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="txtCurrentSequenceTime" Text="25" Grid.Column="1" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>