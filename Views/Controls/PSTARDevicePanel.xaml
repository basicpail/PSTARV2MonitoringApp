<UserControl x:Class="PSTARV2MonitoringApp.Views.Controls.PSTARDevicePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d:DataContext="{d:DesignInstance local:PSTARDevicePanel, IsDesignTimeCreatable=True}"
             xmlns:local="clr-namespace:PSTARV2MonitoringApp.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="450">

    <UserControl.Resources>
        <!-- 팔레트 -->
        <!-- Color를 직접 정의-->
        <Color x:Key="ClrBgDeepGreenColor">#0F2C23</Color>
        <Color x:Key="ClrPanelBlackColor">#0B0B0B</Color>
        <!-- 생략 -->

        <!-- SolidColorBrush로 정의 -->
        <SolidColorBrush x:Key="ClrBgDeepGreen" Color="#0C2619"/>
        <SolidColorBrush x:Key="ClrPanelBlack" Color="#0B0B0B"/>
        <SolidColorBrush x:Key="ClrTextWhite" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="ClrTextDim" Color="#D0D3D6"/>
        <SolidColorBrush x:Key="ClrStartGreen" Color="#29A745"/>
        <SolidColorBrush x:Key="ClrStopRed" Color="#E23B3B"/>
        <SolidColorBrush x:Key="ClrButtonWhite" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="ClrGreyKey" Color="#9AA0A6"/>

        <!-- 공통 텍스트 -->
        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontFamily" Value="Segoe UI Black"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="BadgeText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- 램프 -->
        <Style x:Key="PillStatus" TargetType="Border">
            <Setter Property="CornerRadius" Value="22"/>
            <Setter Property="Background" Value="#0B0B0B"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- STATUS LAMP -->
        <Style x:Key="StatusLamp" TargetType="Ellipse">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Fill" Value="Gray" />
            <Setter Property="Stroke" Value="#121212" />
            <Setter Property="StrokeThickness" Value="2" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="2,0,4,0" />
        </Style>

        <!-- 향상된 버튼 스타일 -->
        <Style x:Key="EnhancedButton" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Segoe UI Black"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Content="{TemplateBinding Content}"
                                            ContentTemplate="{TemplateBinding ContentTemplate}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- 마우스 오버 효과 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#FFFFFF" Opacity="0.1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- 버튼 눌림 효과 -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#FFFFFF" Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!-- 애니메이션 효과 -->
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                           To="1.05" Duration="0:0:0.1"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                           To="1.05" Duration="0:0:0.1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                           To="1.0" Duration="0:0:0.1"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                           To="1.0" Duration="0:0:0.1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <!-- LP TEST 버튼 특별 스타일 -->
        <Style x:Key="LPTestButton" TargetType="Border">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="{StaticResource ClrGreyKey}"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,20,25,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- 마우스 오버 효과 -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B5BDC4"/>
                </Trigger>
                <!-- 애니메이션 트리거 -->
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                           To="1.1" Duration="0:0:0.1"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                           To="1.1" Duration="0:0:0.1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                           To="1.0" Duration="0:0:0.1"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                           To="1.0" Duration="0:0:0.1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <!-- 흰색 테두리 버튼(HEAT / MODE) -->
        <Style x:Key="HollowSquareButton" TargetType="Border">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#FFFFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- 마우스 오버 효과 -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
                <!-- 애니메이션 트리거 -->
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                           To="1.05" Duration="0:0:0.1"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                           To="1.05" Duration="0:0:0.1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                           To="1.0" Duration="0:0:0.1"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                           To="1.0" Duration="0:0:0.1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <!-- Start/Stop 대형 컬러 버튼 -->
        <Style x:Key="FatColorButton" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- 마우스 오버 효과 -->
                <Trigger Property="IsMouseOver" Value="True">
                </Trigger>
                <!-- 애니메이션 트리거 -->
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                           To="1.05" Duration="0:0:0.1"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                           To="1.05" Duration="0:0:0.1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                           To="1.0" Duration="0:0:0.1"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                           To="1.0" Duration="0:0:0.1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <!-- 검은 패널(좌측 2개, 우측 1개) -->
        <Style x:Key="PanelCard" TargetType="Border">
            <Setter Property="Background" Value="#0B0B0B"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
    </UserControl.Resources>

    <!-- 유연한 크기 조정이 가능한 컨테이너 -->
    <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
        <Border Width="420" Height="800" Background="{StaticResource ClrBgDeepGreen}">
            <Grid Margin="18">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 헤더 및 버튼 영역 -->
                    <RowDefinition Height="40"/>
                    <!-- 간격 증가 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 상태 램프 영역 -->
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 헤더와 버튼 영역을 통합 -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 헤더 영역 -->
                    <Grid Grid.Row="0">
                        <TextBlock Text="PSTAR-V2" Style="{StaticResource TitleText}" 
                               HorizontalAlignment="Left" VerticalAlignment="Top" />
                        <TextBlock Text="KTE" Foreground="White" FontFamily="Segoe UI Black" 
                               FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Top" />
                    </Grid>

                    <!-- 버튼 영역 - 오른쪽 정렬 -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" 
                            HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="상세 정보" 
                            Background="#2979FF" 
                            Foreground="White"
                            Width="90"
                            Height="30"
                            FontSize="12"
                            Margin="2,0" 
                            Command="{Binding ViewModel.ShowDeviceDetailsCommand}"/>
                        <Button Content="이상 발생" 
                            Background="#FF9800" 
                            Foreground="White"
                            Width="90"
                            Height="30"
                            FontSize="12"
                            Margin="2,0" 
                            Command="{Binding ViewModel.SimulateAbnormalCommand}"/>
                        <Button Content="삭제" 
                            Background="#F44336" 
                            Foreground="White"
                            Width="60"
                            Height="30"
                            FontSize="12"
                            Margin="2,0" 
                            Command="{Binding ViewModel.DeleteDeviceCommand}"/>
                    </StackPanel>
                </Grid>


                <!-- 상단 상태 램프 2열 -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="18"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 좌측 컬럼 -->
                    <StackPanel Grid.Column="0" >
                        <!-- SOURCE -->
                        <Border Style="{StaticResource PillStatus}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="SourceLamp" Style="{StaticResource StatusLamp}"/>
                                <TextBlock Grid.Column="1" Text="SOURCE" Style="{StaticResource BadgeText}"/>
                            </Grid>
                        </Border>
                        <!-- ABNORMAL -->
                        <Border Style="{StaticResource PillStatus}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="AbnormalLamp" Style="{StaticResource StatusLamp}"/>
                                <TextBlock Grid.Column="1" Text="ABNORMAL" Style="{StaticResource BadgeText}"/>
                            </Grid>
                        </Border>
                        <!-- RUN -->
                        <Border Style="{StaticResource PillStatus}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="RunLamp" Style="{StaticResource StatusLamp}"/>
                                <TextBlock Grid.Column="1" Text="RUN" Style="{StaticResource BadgeText}"/>
                            </Grid>
                        </Border>
                        <!-- STOP -->
                        <Border Style="{StaticResource PillStatus}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="StopLamp" Style="{StaticResource StatusLamp}"/>
                                <TextBlock Grid.Column="1" Text="STOP" Style="{StaticResource BadgeText}"/>
                            </Grid>
                        </Border>
                        <!-- HEATING -->
                        <Border Style="{StaticResource PillStatus}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="HeatingLamp" Style="{StaticResource StatusLamp}"/>
                                <TextBlock Grid.Column="1" Text="HEATING" Style="{StaticResource BadgeText}"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- 우측 컬럼 -->
                    <StackPanel Grid.Column="2" >
                        <!-- COM. FAILURE -->
                        <Border Style="{StaticResource PillStatus}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="CommFailureLamp" Style="{StaticResource StatusLamp}"/>
                                <TextBlock Grid.Column="1" Text="COM. FAILURE" Style="{StaticResource BadgeText}"/>
                            </Grid>
                        </Border>
                        <!-- LOW PRESSURE -->
                        <Border Style="{StaticResource PillStatus}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="LowPressureLamp" Style="{StaticResource StatusLamp}"/>
                                <TextBlock Grid.Column="1" Text="LOW PRESSURE" Style="{StaticResource BadgeText}"/>
                            </Grid>
                        </Border>
                        <!-- 빈 자리 맞춤 -->
                        <Border Background="Transparent" Height="46"/>
                        <!-- STANDBY -->
                        <Border Style="{StaticResource PillStatus}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="StandbyLamp" Style="{StaticResource StatusLamp}"/>
                                <TextBlock Grid.Column="1" Text="STANDBY" Style="{StaticResource BadgeText}"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- 하단 메인영역 -->
                <Grid Grid.Row="4" Margin="0,30,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 좌측 두 개의 블록 -->
                    <StackPanel Grid.Column="0" Grid.RowSpan="3">
                        <!-- ON + HEAT -->
                        <Border Style="{StaticResource PanelCard}" Margin="0,0,15,30">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ON 램프 -->
                                <StackPanel Orientation="Horizontal" Margin="-10,0">
                                    <Ellipse x:Name="HeatOnLamp" Style="{StaticResource StatusLamp}"/>
                                    <TextBlock Text="ON" Style="{StaticResource BadgeText}"/>
                                </StackPanel>

                                <!-- HEAT 버튼 -->
                                <Border Grid.Column="1" Style="{StaticResource HollowSquareButton}" HorizontalAlignment="Right">
                                    <Grid>
                                        <Border CornerRadius="12" BorderBrush="#0B0B0B" BorderThickness="3.5" Margin="5"/>
                                        <Button Content="HEAT" Foreground="Black" Style="{StaticResource EnhancedButton}"
                                                Command="{Binding ViewModel.ToggleHeatCommand}"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- MANUAL/ST'BY + MODE -->
                        <Border Style="{StaticResource PanelCard}" Margin="0,0,15,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel  VerticalAlignment="Center" Margin="-10,0">
                                    <StackPanel Orientation="Horizontal" >
                                        <Ellipse x:Name="ManualModeLamp" Style="{StaticResource StatusLamp}"/>
                                        <TextBlock Text="MANUAL" Style="{StaticResource BadgeText}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" >
                                        <Ellipse x:Name="StandbyModeLamp" Style="{StaticResource StatusLamp}"/>
                                        <TextBlock Text="ST'BY" Style="{StaticResource BadgeText}"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- MODE 버튼 -->
                                <Border Grid.Column="1" Style="{StaticResource HollowSquareButton}" HorizontalAlignment="Right">
                                    <Grid>
                                        <Border CornerRadius="12" BorderBrush="#0B0B0B" BorderThickness="3.5" Margin="5"/>
                                        <Button Content="MODE" Foreground="Black" Style="{StaticResource EnhancedButton}"
                                                Command="{Binding ViewModel.ToggleModeCommand}"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- LP TEST (중앙 아래) - 향상된 버튼 효과와 lamp 제어 -->
                        <Border x:Name="LPTestBorder" Style="{StaticResource LPTestButton}">
                            <Button Content="LP&#10;TEST" 
                                Foreground="#212121"
                                FontFamily="Segoe UI Black" 
                                FontSize="16"
                                Style="{StaticResource EnhancedButton}"
                                />
                        </Border>
                    </StackPanel>

                    <!-- 우측 Start/Stop 패널 -->
                    <Border Grid.Column="1" Grid.RowSpan="2" Style="{StaticResource PanelCard}" Padding="10" >
                        <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <!-- START -->
                            <Border Style="{StaticResource FatColorButton}"
                                    Background="{StaticResource ClrStartGreen}"
                                    BorderBrush="#0D7F33"
                                    Margin="0,0,0,50">
                                <Grid>
                                    <Border CornerRadius="12" BorderBrush="#0B0B0B" BorderThickness="3.5" Margin="5"/>
                                    <Button Content="START" Foreground="White" Style="{StaticResource EnhancedButton}"
                                     Command="{Binding ViewModel.StartCommand}"/>
                                </Grid>
                            </Border>

                            <!-- STOP / RESET -->
                            <Border Style="{StaticResource FatColorButton}"
                                    Background="{StaticResource ClrStopRed}"
                                    BorderBrush="#9D1E1E">
                                <Grid>
                                    <Border CornerRadius="12" BorderBrush="#0B0B0B" BorderThickness="3.5" Margin="5"/>
                                    <Button Foreground="White" Style="{StaticResource EnhancedButton}"
                                        Command="{Binding ViewModel.StopCommand}">
                                        <StackPanel>
                                            <TextBlock Text="STOP" HorizontalAlignment="Center"/>
                                            <Border Height="2" Background= "Black" HorizontalAlignment="Stretch"/>
                                            <TextBlock Text="RESET" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Viewbox>
</UserControl>